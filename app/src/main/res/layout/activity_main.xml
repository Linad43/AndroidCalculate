<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/app_name"
        android:background="@color/violet"
        tools:ignore="MissingConstraints" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:padding="5dp"
        android:rowCount="9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        tools:ignore="MissingConstraints,UselessLeaf">

        <EditText
            android:id="@+id/inputET"
            android:layout_columnSpan="4"
            android:layout_gravity="fill"
            android:layout_margin="5dp"
            android:background="@color/violet_white"
            android:padding="5dp"
            android:textAlignment="textEnd"
            android:textSize="20sp"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/resultTV"
            android:layout_columnSpan="4"
            android:layout_gravity="fill"
            android:layout_margin="5dp"
            android:text="@string/result"
            android:textAlignment="textEnd"
            android:textSize="20sp"
            tools:ignore="RtlCompat" />

        <Button
            android:layout_row="2"
            android:layout_column="3"
            android:layout_gravity="fill"
            android:layout_margin="5dp"
            android:text="/"
            android:textSize="20sp"
            android:onClick="click_div"/>

        <Button
            android:layout_gravity="fill"
            android:layout_margin="5dp"
            android:text="1"
            android:textSize="20sp"
            android:onClick="click_1"/>

        <Button
            android:layout_gravity="fill"
            android:layout_margin="5dp"
            android:text="2"
            android:textSize="20sp"
            android:onClick="click_2" />

        <Button
            android:layout_gravity="fill"
            android:layout_margin="5dp"
            android:text="3"
            android:textSize="20sp"
            android:onClick="click_3"/>

        <Button
            android:layout_gravity="fill"
            android:layout_margin="5dp"
            android:text="*"
            android:textSize="20sp"
            android:onClick="click_mul"/>

        <Button
            android:layout_gravity="fill"
            android:layout_margin="5dp"
            android:text="4"
            android:textSize="20sp"
            android:onClick="click_4" />

        <Button
            android:layout_gravity="fill"
            android:layout_margin="5dp"
            android:text="5"
            android:textSize="20sp"
            android:onClick="click_5" />

        <Button
            android:layout_gravity="fill"
            android:layout_margin="5dp"
            android:text="6"
            android:textSize="20sp"
            android:onClick="click_6"/>

        <Button
            android:layout_gravity="fill"
            android:layout_margin="5dp"
            android:text="-"
            android:textSize="20sp"
            android:onClick="click_dif"
            />

        <Button
            android:layout_gravity="fill"
            android:layout_margin="5dp"
            android:text="7"
            android:textSize="20sp"
            android:onClick="click_7" />

        <Button
            android:layout_gravity="fill"
            android:layout_margin="5dp"
            android:text="8"
            android:textSize="20sp"
            android:onClick="click_8"/>

        <Button
            android:layout_gravity="fill"
            android:layout_margin="5dp"
            android:text="9"
            android:textSize="20sp"
            android:onClick="click_9" />

        <Button
            android:layout_gravity="fill"
            android:layout_margin="5dp"
            android:layout_rowSpan="3"
            android:text="+"
            android:textSize="20sp"
            android:onClick="click_sum"/>

        <Button
            android:layout_gravity="fill"
            android:layout_margin="5dp"
            android:text="0"
            android:layout_columnSpan="2"
            android:textSize="20sp"
            android:onClick="click_0" />
        <Button
            android:layout_gravity="fill"
            android:layout_row="7"
            android:layout_column="0"
            android:layout_margin="5dp"
            android:layout_columnSpan="3"
            android:text="="
            android:textSize="20sp"
            android:onClick="click_res"/>
        <Button
            android:layout_gravity="fill"
            android:layout_margin="5dp"
            android:layout_row="8"
            android:layout_column="0"
            android:layout_columnSpan="4"
            android:text="reset"
            android:textSize="20sp"
            android:onClick="reset" />
    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>